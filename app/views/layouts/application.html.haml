!!! 5

%html
  %head
    %title 
      =yield :title
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-trak" => true
    = csrf_meta_tags 

  %body
    .container
      .header
        %ul.nav.nav-pills.pull-right
          -if signed_in?
            %li.active 
              =link_to "Home", posts_path 
            %li
              =link_to current_user.name.camelcase, user_path(current_user)
            %li 
              =link_to "Sign Out", signout_path
          -else
            %li.active 
              =link_to "Home", root_path 
            %li
              =link_to "Sign In", signin_path 
          %li 
            =link_to "Tags", categories_path
          %li 
            =link_to "Contact", "#"
        %h3.text-muted Originate China

      -if flash[:alert]
        .alert.alert-danger
          .h3
            =flash[:alert]
      -if flash[:notice]
        .alert.alert-success
          .h3
            =flash[:notice]

      = yield 

      .footer
        %p &copy; Company 2013
