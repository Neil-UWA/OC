.panel.panel-primary
  .panel-heading
    %h1
      =@post.title
  .panel-body
    %h6 by #{@post.user.name.camelcase}
    %p #{@post.content}

%h1 Comments

-@post.comments.each do |comment|
  .panel.panel-danger
    .panel-body 
      #{comment.comment}
      %span.label.label-primary.pull-right 
        -if comment.user.nil?
          Anonymous
        -else
          #{comment.user.name.camelcase}


=form_for [@post, @post.comments.build] do |comment_form|
  .form-group
    =comment_form.label :comment
    =comment_form.text_area :comment, {class:"form-control"}

  =comment_form.submit "Comment", {class: "btn btn-primary"}

