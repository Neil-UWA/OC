-provide(:title,"New Post")

%h1 Post#New

=form_for [@user, @post] do |post_form|
  .form-group
    =post_form.label :title 
    =post_form.text_field :title, {class:"form-control"}
  .form-group
    =post_form.label :content 
    =post_form.text_area :content, {rows: 20, class:"form-control"}
  .form-group
    =fields_for  @post.categories.build do |category_form|
      .input-group
        .input-group-addon Tag
        =category_form.text_field :category, {class: "form-control"}

  =post_form.submit "Post", {class: "btn btn-primary"} 

-if @post.errors.any? 
  :javascript
    $('.field_with_errors').addClass("has-error");
